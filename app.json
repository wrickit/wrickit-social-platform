{
  "name": "Wrickit Social Platform",
  "description": "A social networking platform for students to connect with classmates",
  "repository": "https://github.com/your-username/wrickit",
  "logo": "https://node-js-sample.herokuapp.com/node.png",
  "keywords": ["node", "express", "react", "social", "education"],
  "image": "heroku/nodejs",
  "addons": [
    {
      "plan": "heroku-postgresql:mini"
    },
    {
      "plan": "sendgrid:starter"
    }
  ],
  "env": {
    "NODE_ENV": {
      "description": "Production environment",
      "value": "production"
    },
    "SESSION_SECRET": {
      "description": "Secret key for session encryption",
      "generator": "secret"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ]
}